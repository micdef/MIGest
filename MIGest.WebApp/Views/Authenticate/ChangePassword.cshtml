@model MIGest.WebApp.Models.Authenticate.ChangePwdForm

@{
    ViewBag.Title = "ChangePassword";
}

<div class="row">
    <div class="login-box">
        <div class="login-box-body">
            <p class="login-box-msg">Changez votre mot de passe...</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.OldPassword).ToHtmlString() } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NewPassword1, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NewPassword1).ToHtmlString() } })
                        @Html.ValidationMessageFor(model => model.NewPassword1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NewPassword2, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NewPassword2).ToHtmlString() } })
                        @Html.ValidationMessageFor(model => model.NewPassword2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Se connecter" class="btn btn-default form-button" />
                    </div>
                </div>
            }
            <div class="row">
                @if (ViewBag.Error != null)
                {
                    <p class="text-danger col-md-offset-1 col-md-10">@ViewBag.Error</p>
                }
            </div>
        </div>
    </div>
</div>
