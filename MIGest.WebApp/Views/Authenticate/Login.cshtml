@using System.Web.UI.WebControls
@model MIGest.WebApp.Models.Authenticate.LoginForm

<div class="row">
    <div class="login-box">
        <div class="login-box-body">
            <p class="login-box-msg">Authentifiez-vous pour pouvoir continuer...</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Username).ToHtmlString() } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Password).ToHtmlString() } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Se connecter" class="btn btn-default form-button" />
                    </div>
                </div>
            }

            <div class="row">
                @Html.ActionLink("J'ai oublié mon mot de passe...", "Login", "Authenticate", new { @class = "col-md-11 col-md-offset-1" })

                @if (ViewBag.Error != null)
                {
                    <p class="text-danger col-md-offset-1 col-md-10">@ViewBag.Error</p>
                }
            </div>
        </div>
    </div>
</div>
